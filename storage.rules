rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read blog images
    match /blog-images/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read portfolio images
    match /portfolio-images/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read testimonial avatars
    match /testimonial-avatars/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read mockup images
    match /mockup-images/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to all uploaded images
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}